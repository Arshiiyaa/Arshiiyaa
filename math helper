//what do you think about this
#include<stdio.h>
#include<math.h>

int main()
{
    //tabe
    int main;
    //
    printf("\n\t•triangles  :  1\n\t•etehads  :  2\n");
	scanf("%d",&main);
	
	//pythagoras//
	if (main==1)
	{
	 //tabe
	int first;
	int second;
	int third;
	//
	printf("   •first side:");
	scanf("%d",&first);
	
	printf("   •second side:");
	scanf("%d",&second);
	
	printf("   •third side:");
	scanf("%d",&third);
	
	if(((first*first)+(second*second)==(third*third))||((second*second)+(third*third)==(first*first))||((first*first)+(third*third)==(second*second)))
	{
	    printf("\tاین مثلث فیثاغورث است");
	}
	 if ((first==second)&&(first==third))
	{ 
	printf("\tاین مثلث متساوی الاضلاع است");
	}
	 else if ((first==second&&first!=third)||(first==third&&first!=second)||(second==third&&second!=first))
	{
	    printf("\tاین مثلث متساوی الثاقین است");
	}
	else 
	{
	    printf("\tمثلث بدون اسم است");
	}
	}
		/*
		
		etehad
			
	*/
	if(main==2)
	{
	//tabe
	int etehad;
	//
	printf("\t•etehad moraba do jomle  :  1\n\t•etehad mozdavej  :  2\n\t•etehad yek jomle moshtarak  :  3\n");
	scanf("%d",&etehad);
	//etehad moraba do jomle
	    if (etehad==1)
	{
	    //tabe
	    int sentence1,sentence2;
	    int f,t,v;
	    //
	    printf("   •first sentence: ");
	    scanf("%d",&sentence1);
	    
	    printf("   •second sentence: ");
	    scanf("%d",&sentence2);


	    f=sentence1*sentence1;
	    t=2*sentence1*sentence2;
	    v=sentence2*sentence2;
	    
	    printf("\t%d+%d+%d",f,t,v);
	}
	
	//etehad mozdavej
	
	if(etehad==2)
	{
	    //tabe
	    int a1,a2,b1,b2;
	    //
	    printf("\tfirst sentence:   ");
	    scanf("%d",&a1);
	    printf("\tsecond sentence:    ");
	    scanf("%d",&a2);
	    
	    b1=a1*a1;
	    b2=-a2*a2;
	    
	    printf("\t%d%d",b1,b2);
	    
	}
	
	//etehad yek jomle moshtarak
	
	if (etehad==3)
	{
	    //tabe
	    int c1,c2,c3,d1,d2,d3;
	    //
	    printf("\tfirst sentence:    ");
	    scanf("%d",&c1);
	    printf("\tsecond sentence:    ");
	    scanf("%d",&c2);
	    printf("\tthird sentence:    ");
	    scanf("%d",&c3);
	    //
	    d1=c1*c1;
	    d2=c1*(c2+c3);
	    d3=c2*c3;
	    //
	    printf("\t%d+(%d)+(%d)",d1,d2,d3);
	}
	}
}